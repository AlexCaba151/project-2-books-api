{
  "swagger": "2.0",
  "info": {
    "title": "Books API",
    "description": "API for managing books and authors",
    "version": "1.0.0"
  },
  "host": "project-2-books-api.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "tags": [
    {
      "name": "Authors",
      "description": "Authors endpoints"
    },
    {
      "name": "Books",
      "description": "Books endpoints"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Root endpoint for health check",
        "responses": {
          "200": {
            "description": "API is running"
          }
        }
      }
    },
    "/api/authors/": {
      "get": {
        "tags": ["Authors"],
        "summary": "Get all authors",
        "description": "Returns the list of all authors",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/Author" }
            }
          },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["Authors"],
        "summary": "Create a new author (requires authentication)",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Author data",
            "required": true,
            "schema": { "$ref": "#/definitions/NewAuthor" }
          }
        ],
        "responses": {
          "201": { "description": "Created", "schema": { "$ref": "#/definitions/Author" } },
          "400": { "description": "Bad Request — Validation failed" },
          "401": { "description": "Not authenticated" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/api/authors/{id}": {
      "get": {
        "tags": ["Authors"],
        "summary": "Get author by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK", "schema": { "$ref": "#/definitions/Author" } },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Author not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["Authors"],
        "summary": "Update an author (requires authentication)",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "name": "body", "in": "body", "schema": { "$ref": "#/definitions/NewAuthor" } }
        ],
        "responses": {
          "200": { "description": "Author updated" },
          "400": { "description": "Bad Request — Validation failed or invalid ID" },
          "401": { "description": "Not authenticated" },
          "404": { "description": "Author not found" }
        }
      },
      "delete": {
        "tags": ["Authors"],
        "summary": "Delete an author (requires authentication)",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Author deleted" },
          "400": { "description": "Invalid ID" },
          "401": { "description": "Not authenticated" },
          "404": { "description": "Author not found" }
        }
      }
    },
    "/api/books/": {
      "get": {
        "tags": ["Books"],
        "summary": "Get all books",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/Book" }
            }
          },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["Books"],
        "summary": "Create a new book (requires authentication)",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/NewBook" }
          }
        ],
        "responses": {
          "201": { "description": "Book created" },
          "400": { "description": "Validation failed" },
          "401": { "description": "Not authenticated" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/api/books/{id}": {
      "get": {
        "tags": ["Books"],
        "summary": "Get book by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": { "$ref": "#/definitions/Book" }
          },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Book not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["Books"],
        "summary": "Update a book (requires authentication)",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "name": "body", "in": "body", "schema": { "$ref": "#/definitions/NewBook" } }
        ],
        "responses": {
          "200": { "description": "Book updated" },
          "400": { "description": "Validation failed or invalid ID" },
          "401": { "description": "Not authenticated" },
          "404": { "description": "Book not found" }
        }
      },
      "delete": {
        "tags": ["Books"],
        "summary": "Delete a book (requires authentication)",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Book deleted" },
          "401": { "description": "Not authenticated" },
          "404": { "description": "Book not found" }
        }
      }
    }
  },
  "definitions": {
    "Author": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "name": { "type": "string" },
        "bio": { "type": "string" },
        "nationality": { "type": "string" },
        "birthDate": { "type": "string", "format": "date" }
      }
    },
    "NewAuthor": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "bio": { "type": "string" },
        "nationality": { "type": "string" },
        "birthDate": { "type": "string", "format": "date" }
      }
    },
    "Book": {
      "type": "object",
      "properties": {
        "_id": { "type": "string" },
        "title": { "type": "string" },
        "author": { "type": "string" },
        "genre": { "type": "string" },
        "publishedYear": { "type": "integer" },
        "pages": { "type": "integer" },
        "isbn": { "type": "string" },
        "language": { "type": "string" },
        "inStock": { "type": "boolean" }
      }
    },
    "NewBook": {
      "type": "object",
      "required": ["title", "author", "genre", "publishedYear", "pages", "isbn", "language"],
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "genre": { "type": "string" },
        "publishedYear": { "type": "integer" },
        "pages": { "type": "integer" },
        "isbn": { "type": "string" },
        "language": { "type": "string" },
        "inStock": { "type": "boolean" }
      }
    }
  }
}
